{
  "manifest_version": 3,
  "name": "ChatGPT Enterキー挙動スワッパー",
  "version": "1.0.0",
  "description": "ChatGPT専用：EnterとShift+Enterの動作を入れ替えます。Slackと同様に「Enter＝改行」「Shift+Enter＝送信」となるため、違和感なく快適に利用できます。",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*"
  ],
  "action": {
    "default_title": "Swap on this site"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html"
}
